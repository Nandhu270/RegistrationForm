<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form</title>
    <link rel="stylesheet" href="index.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body{
            background-image: url('https://img.freepik.com/premium-photo/abstract-background-design-images-wallpaper-ai-generated_1007521-2316.jpg');
            background-size: cover;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .container {
            width: 50vw;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .form {
        background-image: url('https://png.pngtree.com/thumb_back/fh260/background/20231102/pngtree-vibrant-gradient-spirits-a-captivating-abstract-texture-image_13714632.png');
        background-size: cover; 
        background-position: center; 
        background-repeat: no-repeat;
        background-attachment: fixed;
        padding: 15px;
        border-radius: 30px; 
        background-clip: border-box;
        }


    .form-control:hover,.form-select:hover,.form-check-input:hover{
        background: linear-gradient(45deg, #00DDFF, #FF00FF, #FFD700);
        border-radius: 5px;
        transition: background 0.3s ease, transform 0.3s ease; 
        transform: scale(1.05);
        animation: pulse 1s infinite; /* Add pulse animation */
    }
    label{
        font-size:16px;
        font-weight: 650;
    }
    .btn {
        text-align: center;
        margin-top: 5px;
        display: flex;
        justify-content: center;
    }

    .btn-outline-primary:hover,button:hover{
        background: linear-gradient(45deg, #00DDFF, #FF00FF, #FFD700);
        border-radius: 10px;
        transition: background 0.3s ease, transform 0.3s ease; 
        transform: scale(1.05);
        animation: pulse 1s infinite; /* Add pulse animation */
    }

    @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    button{
        border: 1px solid #7598ec;
        background-color: rgb(170, 221, 255);
        color: #0049f4;
        margin: 2px;
        padding: 4px;
        border-radius: 10px;
        box-sizing: border-box;
    }
    </style>
</head>
<body>
    <div class="container">
        <form class="form" method="post" action="/save">
            <h2>Registration Form</h1>
            <div class="row g-2">
                <div class="col-md-6">
                    <label class="form-label" for="Firstname">First Name</label>
                    <input type="text" class="form-control" id="Firstname" name="FirstName" placeholder="Enter First Name">
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="Lastname">Last Name</label>
                    <input type="text" class="form-control" id="Lastname" name="LastName" placeholder="Enter Last Name">
                </div>
            </div>

            <div class="col-12 mt-1">
                <label class="form-label" for="mail">Email Address</label>
                <input type="email" class="form-control" id="mail" name="Email" placeholder="Enter email Address">
            </div>

            <div class="col-12 mt-1">
                <label class="form-label" for="number">Mobile Number</label>
                <input type="tel" id="number" class="form-control" name="PhoneNumber" placeholder="Enter Mobile Number">
            </div>

            <div class="col-12 mt-1">
                <label class="form-label" for="dob">Birth Date</label>
                <input type="date" id="dob" class="form-control" name="DateOfBirth">
            </div>

            <div class="col-12 mt-1">
                <label class="form-label">Gender</label><br>
                <input type="radio" id="male" class="form-check-input" name="Gender" value="Male">
                <label for="male" class="form-check-label">Male</label>
                <input type="radio" id="female" class="form-check-input" name="Gender" value="Female">
                <label for="female" class="form-check-label">Female</label>
                <input type="radio" id="prefer-not" class="form-check-input" name="Gender" value="Prefer Not To Say">
                <label for="prefer-not" class="form-check-label">Prefer not to say</label>
            </div>

            <div class="col-12 mt-1">
                <label class="form-label" for="address">Address</label>
                <textarea class="form-control" id="address" placeholder="Enter Address" name="Address" rows="1"></textarea>
            </div>

            <div class="row g-2 mt-1">
                <div class="col-md-6">
                    <label class="form-label" for="Country">Country</label>
                    <select class="form-select" id="Country" name="Country">
                        <option select disabled>-- Country --</option>
                        <option value="India">India</option>
                        <option value="America">America</option>
                        <option value="England">England</option>
                        <option value="Russia">Russia</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label" for="postal-code">Pincode</label>
                    <input type="number" id="postal-code" class="form-control" name="PostalCode" placeholder="Enter postal code">
                </div>
            </div>
            <div class="btn">
                <button type="submit" class="btn btn-outline-primary">Submit</button>
            </div>
        </form>
    </div>

    <div class="create">
        <h1 align="center" style="margin-top: 35px;">REGISTERED PEOPLE</h1>
    <table class="table table-striped table-info table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Country</th>
                <th>Postal Code</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach( (student) => { %>
                <tr>
                    <td><%= student.FirstName %></td>
                    <td><%= student.LastName %></td>
                    <td><%= student.Email %></td>
                    <td><%= student.PhoneNumber %></td>
                    <td><%= student.DateOfBirth %></td>
                    <td><%= student.Gender %></td>
                    <td><%= student.Address %></td>
                    <td><%= student.Country %></td>
                    <td><%= student.PostalCode %></td>
                    <td>
                        <form action="/delete/<%= student._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                        <a href="/edit/<%= student._id %>"><button type="button">Update</button></a>                        
                    </td>
                </tr>
            <% }) %>
        </tbody>
        
    </table>
    </div>
</body>
</html>
